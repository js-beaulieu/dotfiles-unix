#!/usr/bin/env bash

set -e

if command -v zsh &> /dev/null; then
    echo "zsh is already installed"
else
    echo "Installing zsh"
    sudo apt update
    sudo apt install -y zsh

    echo "Setting zsh as the default shell"
    ln -sf "$HOME/.config/zsh/.zshenv" "$HOME/.zshenv"
    chsh -s $(which zsh)
fi
